{
	"name": "modules-abi",
	"version": "0.3.4",
	"description": "Get ABI and version for common node runtimes (node, NW.js, Electron)",
	"main": "src/index.js",
	"type": "module",
	"files": [
		"dist"
	],
	"bin": {
		"modules-abi": "./lib/cli.js"
	},
	"license": "MIT",
	"repository": "armaldio/modules-abi",
	"author": {
		"name": "Quentin Goinaud",
		"email": "armaldio@gmail.com",
		"url": "https://armaldio.xyz"
	},
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"test": "uvu -r tsm test",
		"watch-test": "uvu -w -r tsm test",
		"start": "tsm examples/index.ts",
		"doc": "jsdoc2md dist\\index.js > DOCUMENTATION.md",
		"release": "np",
		"build": "tsup src/index.ts --target es2020 --format esm,cjs --dts --sourcemap --minify --shims",
		"watch": "tsup src/index.ts --target es2020 --format esm,cjs --dts --sourcemap --watch --shims"
	},
	"keywords": [],
	"dependencies": {
		"@types/node": "^18.11.9",
		"@types/semver": "^7.3.13",
		"is-online": "^10.0.0",
		"mri": "^1.2.0",
		"semver": "^7.3.8"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.43.0",
		"@typescript-eslint/parser": "^5.43.0",
		"eslint": "^8.27.0",
		"eslint-config-xo": "^0.43.1",
		"eslint-plugin-ava": "^13.2.0",
		"jsdoc-to-markdown": "^7.1.1",
		"node-abi": "^3.28.0",
		"np": "^7.6.2",
		"tsm": "^2.2.2",
		"tsup": "^6.5.0",
		"typescript": "^4.9.3",
		"uvu": "^0.5.6",
		"xo": "^0.52.4"
	}
}
