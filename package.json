{
	"name": "modules-abi",
	"version": "0.3.4",
	"description": "Get ABI and version for common node runtimes (node, NW.js, Electron)",
	"main": "src/index.js",
	"type": "module",
	"files": [
		"src",
		"lib",
		"examples",
		"DOCUMENTATION.md",
		"README.md"
	],
	"bin": {
		"modules-abi": "./lib/cli.js"
	},
	"license": "MIT",
	"repository": "armaldio/modules-abi",
	"author": {
		"name": "Quentin Goinaud",
		"email": "armaldio@gmail.com",
		"url": "https://armaldio.xyz"
	},
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"test": "uvu -r tsm test",
		"watch-test": "uvu -w -r tsm test",
		"start": "node examples",
		"doc": "jsdoc2md dist\\index.js > DOCUMENTATION.md",
		"release": "np",
		"build": "tsup src/index.ts --format esm,cjs --dts --sourcemap --minify --shims",
		"watch": "tsup src/index.ts --format esm,cjs --dts --sourcemap --watch --shims"
	},
	"keywords": [],
	"dependencies": {
		"@types/node": "^18.11.9",
		"@types/semver": "^7.3.13",
		"mri": "^1.1.4",
		"semver": "^7.1.1"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.41.0",
		"@typescript-eslint/parser": "^5.41.0",
		"eslint": "^6.8.0",
		"eslint-config-xo": "^0.27.2",
		"eslint-plugin-ava": "^9.0.0",
		"jsdoc-to-markdown": "^5.0.0",
		"node-abi": "^2.9.0",
		"np": "^5.0.3",
		"tsm": "^2.2.2",
		"tsup": "^6.3.0",
		"typescript": "^4.8.4",
		"uvu": "^0.5.6",
		"xo": "^0.25.3"
	}
}
